{
    "name": "Jekyll",
    "image": "mcr.microsoft.com/devcontainers/jekyll",
    "features": {
        // Install latest stable Node (we use for validation scripts after build)
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": ["html-validate.vscode-html-validate"]
        }
    }
}
